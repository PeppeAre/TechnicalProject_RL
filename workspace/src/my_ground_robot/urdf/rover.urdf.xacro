<?xml version="1.0"?>
<robot name="rover" xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:arg name="robot_name" default="my_rover"/>
  <xacro:arg name="color" default="Olive"/> 

  <material name="Olive"><color rgba="0.3 0.35 0.2 1"/></material>   <material name="Desert"><color rgba="0.76 0.7 0.5 1"/></material>  <material name="DarkGrey"><color rgba="0.2 0.2 0.2 1"/></material> <material name="Black"><color rgba="0.05 0.05 0.05 1"/></material> <material name="RedLight"><color rgba="0.8 0 0 1"/></material>     <link name="base_link">
    <visual>
      <origin xyz="0 0 0.08" rpy="0 0 0"/>
      <geometry><box size="0.6 0.4 0.15"/></geometry>
      <material name="$(arg color)"/>
    </visual>
    
    <visual>
      <origin xyz="-0.15 0 0.18" rpy="0 0 0"/>
      <geometry><box size="0.2 0.25 0.1"/></geometry>
      <material name="DarkGrey"/>
    </visual>

    <visual>
      <origin xyz="0.31 0 0.05" rpy="0 0 0"/>
      <geometry><box size="0.05 0.35 0.05"/></geometry>
      <material name="Black"/>
    </visual>

    <visual>
      <origin xyz="-0.31 0.15 0.1" rpy="0 0 0"/>
      <geometry><box size="0.01 0.05 0.02"/></geometry>
      <material name="RedLight"/>
    </visual>
    <visual>
      <origin xyz="-0.31 -0.15 0.1" rpy="0 0 0"/>
      <geometry><box size="0.01 0.05 0.02"/></geometry>
      <material name="RedLight"/>
    </visual>

    <collision>
      <origin xyz="0 0 0.08" rpy="0 0 0"/>
      <geometry><box size="0.65 0.70 0.2"/></geometry>
    </collision>

    <inertial>
      <mass value="15.0"/> <inertia ixx="0.2" ixy="0" ixz="0" iyy="0.2" iyz="0" izz="0.2"/>
    </inertial>
  </link>

  <gazebo reference="base_link">
    <material>
      <ambient>${'0.2 0.25 0.15 1' if '$(arg color)' == 'Olive' else '0.6 0.5 0.4 1'}</ambient>
      <diffuse>${'0.2 0.25 0.15 1' if '$(arg color)' == 'Olive' else '0.6 0.5 0.4 1'}</diffuse>
    </material>
  </gazebo>

  <xacro:macro name="wheel" params="prefix y_offset">
    <link name="${prefix}_wheel">
      <visual>
        <geometry><cylinder radius="0.15" length="0.1"/></geometry>
        <material name="Black"/>
      </visual>
      <visual>
        <origin xyz="0 0 0.055" rpy="0 0 0"/> 
        <geometry><cylinder radius="0.04" length="0.02"/></geometry>
        <material name="DarkGrey"/>
      </visual>
      
      <collision>
        <geometry><cylinder radius="0.15" length="0.1"/></geometry>
      </collision>
      <inertial>
        <mass value="2.0"/>
        <inertia ixx="0.05" ixy="0" ixz="0" iyy="0.05" iyz="0" izz="0.05"/>
      </inertial>
    </link>

    <joint name="${prefix}_wheel_joint" type="continuous">
      <parent link="base_link"/>
      <child link="${prefix}_wheel"/>
      <origin xyz="0.1 ${y_offset} 0.0" rpy="-1.5707 0 0"/>
      <axis xyz="0 0 1"/>
    </joint>

    <gazebo reference="${prefix}_wheel">
      <material>Gazebo/Black</material>
      <mu1>1.0</mu1> <mu2>1.0</mu2>
    </gazebo>
  </xacro:macro>

  <xacro:wheel prefix="left" y_offset="0.25"/>  
  <xacro:wheel prefix="right" y_offset="-0.25"/>

  <link name="caster_wheel">
    <collision>
      <geometry><sphere radius="0.05"/></geometry>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
  </link>
  <joint name="caster_joint" type="fixed"> 
    <parent link="base_link"/>
    <child link="caster_wheel"/>
    <origin xyz="-0.25 0 -0.1"/> 
  </joint>
  <gazebo reference="caster_wheel">
    <material>Gazebo/Black</material>
    <mu1>0.1</mu1> <mu2>0.1</mu2>
  </gazebo>

  <link name="lidar_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry><cylinder radius="0.05" length="0.06"/></geometry>
      <material name="Black"/> 
    </visual>
    <visual>
      <origin xyz="0.04 0 0" rpy="0 1.57 0"/>
      <geometry><cylinder radius="0.015" length="0.02"/></geometry>
      <material name="RedLight"/>
    </visual>
  </link>
  <joint name="lidar_joint" type="fixed">
    <parent link="base_link"/>
    <child link="lidar_link"/>
    <origin xyz="0.2 0 0.18" rpy="0 0 0"/> </joint>

  <gazebo>
    <plugin filename="gz-sim-diff-drive-system" name="gz::sim::systems::DiffDrive">
      <left_joint>left_wheel_joint</left_joint>
      <right_joint>right_wheel_joint</right_joint>
      <wheel_separation>0.5</wheel_separation> <wheel_radius>0.15</wheel_radius>     <odom_publish_frequency>20</odom_publish_frequency>
      <topic>/model/$(arg robot_name)/cmd_vel</topic>
      <odom_topic>/odom_wheel_unused</odom_topic>
      <frame_id>odom</frame_id>
      <child_frame_id>base_link</child_frame_id>
    </plugin>
  </gazebo>

  <gazebo>
    <plugin filename="gz-sim-odometry-publisher-system"
            name="gz::sim::systems::OdometryPublisher">
      <odom_frame>world</odom_frame>
      <robot_base_frame>base_link</robot_base_frame>
      <dimensions>3</dimensions>
      <odom_topic>/model/$(arg robot_name)/odometry</odom_topic> 
      <odom_publish_frequency>20</odom_publish_frequency>
    </plugin>
  </gazebo>

  <gazebo reference="lidar_link">
    <sensor name="lidar" type="gpu_lidar">
      <pose>0 0 0 0 0 0</pose>
      <topic>/model/$(arg robot_name)/scan</topic>
      <update_rate>10</update_rate>
      <ray>
        <scan>
          <horizontal>
            <samples>360</samples>
            <resolution>1</resolution>
            <min_angle>-1.57</min_angle>
            <max_angle>1.57</max_angle>
          </horizontal>
        </scan>
        <range>
          <min>0.2</min>
          <max>8.0</max> </range>
      </ray>
      <always_on>1</always_on>
      <visualize>true</visualize>
    </sensor>
  </gazebo>

</robot>
